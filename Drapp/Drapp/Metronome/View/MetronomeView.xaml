<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Drapp.Metronome.View.MetronomeView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Test Metronome"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="+10" Command="{Binding IncreaseBpmBy10Command}" />
                <Label Grid.Column="1" Text="{Binding Bpm}" />
                <Button Grid.Column="2" Text="-10" Command="{Binding DecreaseBpmBy10Command}" />
            </Grid>
            <BoxView x:Name="IndicatorBox" Color="{Binding IndicatorColor}" WidthRequest="200" HeightRequest="150"></BoxView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Play" Command="{Binding PlayCommand}" />
                <Button Grid.Column="1" Text="Stop" Command="{Binding StopCommand}"/>
            </Grid>
        </StackLayout>
    </ContentView.Content>
</ContentView>